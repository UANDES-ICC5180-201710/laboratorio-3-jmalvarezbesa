<%= form_for(enrollment) do |f| %>
  <% if enrollment.errors.any?  || notice %>
    <div id="error_explanation">
      <h2><% if enrollment.errors.any? %>
        <%= pluralize(enrollment.errors.count, "error") %>
        <% else %>
        <%= "1 error" %>
        <% end %>
        prohibited this enrollment from being saved:</h2>

      <ul>
        <% if enrollment.errors.any? %>
      <% enrollment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      <% else %>
      <li><%= notice %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :student_id %>
    <%= f.select :student, options_for_select(Person.all.map{|s|[s.to_s, s.id]}) %>
  </div>

  <div class="field">
    <%= f.label :course_id %>
    <%= f.text_field :course_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
